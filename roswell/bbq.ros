#!/bin/sh
#|-*- mode:lisp -*-|#
#| <Put a one-line description here>
exec ros -Q -- $0 "$@"
|#
(progn ;;init forms
  (ros:ensure-asdf)
  #+quicklisp (ql:quickload :bbq :silent t))

(defun main (&rest argv)
  (declare (ignorable argv))
  (let ((query (or (car argv) "")))
    (cond ((string-equal query "new") (let ((n (parse-integer (second argv))))
                                        (bbq:mpc-clear-play (bbq:new-items n))))
          (t (bbq:mpc-clear-play (bbq:search-items query))))))
